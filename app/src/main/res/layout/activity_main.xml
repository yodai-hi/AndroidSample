<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.MainActivity">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/main_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:id="@+id/gps_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    app:contentPadding="20dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/title_gps"
                                android:textSize="20sp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"/>

                        <ImageButton
                                android:id="@+id/location_button"
                                android:src="@drawable/ic_update_black_24dp"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="@string/get_location"
                                android:textSize="20sp"
                                android:layout_gravity="end"
                                android:contentDescription="@string/description_gps"
                                android:backgroundTint="#ffffff"/>

                    </LinearLayout>


                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="20dp">


                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/latitude"
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"/>

                            <TextView
                                    android:id="@+id/location_text_lat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="2"/>

                        </LinearLayout>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/longitude"
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"/>

                            <TextView
                                    android:id="@+id/location_text_lng"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="2"/>

                        </LinearLayout>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/altitude"
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"/>

                            <TextView
                                    android:id="@+id/location_text_alt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="2"/>

                        </LinearLayout>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/speed"
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"/>

                            <TextView
                                    android:id="@+id/location_text_speed"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="2"/>

                        </LinearLayout>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/gpstime"
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"/>

                            <TextView
                                    android:id="@+id/location_text_time"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="2"/>

                        </LinearLayout>

                        <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stamp"
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="1"/>
                            <TextView
                                    android:id="@+id/location_text_time_stamp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="20sp"
                                    android:layout_gravity="start"
                                    android:layout_weight="2"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/sensor_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    app:contentPadding="20dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/title_sensor_data"
                        android:textSize="20sp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"/>

                    <ImageButton
                            android:id="@+id/sensor_fragment_button"
                            android:src="@drawable/ic_last_page_black_24dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="@string/get_location"
                            android:textSize="20sp"
                            android:layout_gravity="end"
                            android:contentDescription="@string/transaction_sensor"
                            android:backgroundTint="#ffffff"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:id="@+id/weather_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    app:contentPadding="20dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/title_weather"
                                android:textSize="20sp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"/>

                        <ImageButton
                                android:id="@+id/api_button"
                                android:src="@drawable/ic_file_download_black_24dp"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="@string/get_location"
                                android:textSize="20sp"
                                android:layout_gravity="end"
                                android:contentDescription="@string/description_api"
                                android:backgroundTint="#ffffff"/>

                    </LinearLayout>

                    <ListView
                            android:id="@+id/weather_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/memo_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    app:contentPadding="20dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:text="@string/title_memo"
                                android:textSize="20sp"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"/>

                        <ImageButton
                                android:id="@+id/memo_button"
                                android:src="@drawable/ic_history_black_24dp"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="@string/get_location"
                                android:textSize="20sp"
                                android:layout_gravity="end"
                                android:contentDescription="@string/description_api"
                                android:backgroundTint="#ffffff"/>

                    </LinearLayout>


                    <EditText
                            android:id="@+id/memo_title_text"
                            android:layout_width="match_parent"
                            android:layout_height="20sp"
                            android:lines="1"
                            android:maxLength="20"
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:background="@drawable/parts_design"
                            android:autofillHints="@string/title"
                            android:textSize="14sp"
                            android:hint="@string/memo_title_hint"/>

                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp"/>

                    <EditText
                            android:id="@+id/memo_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="140sp"
                            android:lines="7"
                            android:maxLength="200"
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:background="@drawable/parts_design"
                            android:autofillHints="@string/main"
                            android:hint="@string/memo_main_hint"
                            android:textSize="14sp"/>

                    <Button
                            android:id="@+id/save_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/save"
                            android:textSize="20sp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                    android:id="@+id/sensor_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>
